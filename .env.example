# LangChain AI ChatConfiguration
# Copy this file to .env and customize as needed

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama-app:11434
OLLAMA_MODEL=gemma:2b
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_NUM_PREDICT=512

# Chat Configuration
CHAT_MEMORY_SIZE=10
MAX_STORED_IMAGES=5

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///data/chathistory.db
DATABASE_TABLE_NAME=message_store

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501

# Image Generation Configuration
IMAGE_MODEL=runwayml/stable-diffusion-v1-5
IMAGE_HEIGHT=512
IMAGE_WIDTH=512
IMAGE_STEPS=20
IMAGE_GUIDANCE_SCALE=7.5
IMAGE_OUTPUT_DIR=./data/generated_images
IMAGE_AUTO_LOAD=true

# Optional: LangChain Tracing
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_api_key_here
# LANGCHAIN_PROJECT=your_project_name
